package sorting;

public class HeapSort {

	public HeapSort() {
		
	}
	
	public Integer[] sort ( Integer[] a ) {
		
		buildHeap( a );
		
		return a;
	}
	
	private Integer[] buildHeap( Integer[] a ) {
		
		for ( int i = ( a.length / 2 ) - 1; i >= 0; i-- ) {
			heapify( a, i, a.length / 2 );
		}
		
		return a;
	}
	
	private Integer[] heapify ( Integer[] a, int idx, int max ) {
		
		
		
		return a;
	}
	
}
